{
  "name": "Facebook Status",
  "version": "1.2.8",
  "manifest_version": 3,
  "description": "Shows your Facebook status (New Friend Requests and Notifications) on a toolbar. No need to keep site open all the time.",
  "developer": {
    "name": "RunninglVlan",
    "url": "https://github.com/RunninglVlan"
  },
  "icons": {
    "64": "img/icon64.png",
    "128": "img/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "img/browserAction/default16.png",
      "32": "img/browserAction/default32.png",
      "19": "img/browserAction/default19.png",
      "38": "img/browserAction/default38.png"
    },
    "default_title": "Facebook Status"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "*://www.facebook.com/*"
  ]
}
