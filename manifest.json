{
	"name":            "Facebook Status",
	"version":         "1.1",
	"manifest_version": 2,

	"description": "Shows your Facebook status (New Friend Requests, Messages and Notifications) on a toolbar. No need to keep site open all the time.",
	"developer": {
		"name": "RunninglVlan",
		"url":  "https://github.com/RunninglVlan"
	},
	"icons": {
		"64":  "img/icon_64.png",
		"128": "img/icon_128.png"
	},

	"browser_action": {
		"default_icon": "img/default.png",
		"default_title": "Facebook Status"
	},

	"background": {
		"scripts": ["js/Constants.js", "js/Statuses.js", "background.js"]
	},
	"permissions": ["*://m.facebook.com/*", "*://www.facebook.com/*", "tabs"]
}
